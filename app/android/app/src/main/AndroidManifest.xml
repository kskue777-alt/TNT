<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tnt">

    <application
        android:label="TNT"
        android:icon="@mipmap/ic_launcher">
        <receiver
            android:name="com.example.tnt.widget.QuickPttWidgetProvider"
            android:exported="false"
            android:label="@string/quick_ptt_widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/quick_ptt_widget_info" />
        </receiver>
    </application>

</manifest>
